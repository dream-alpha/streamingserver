#!/bin/sh
if [ "$1" = "remove" ]; then
	rm -rf /usr/lib/enigma2/python/Plugins/SystemPlugins/streamingserver > /dev/null 2>&1
	rm -rf /data/ubuntu/root/plugins/streamingserver > /dev/null 2>&1
	echo "Plugin removed successfully."
else
	find /data/ubuntu/root/plugins/streamingserver -type f -name "*.pyc" -exec rm -f {} \; > /dev/null 2>&1
fi
exit 0
